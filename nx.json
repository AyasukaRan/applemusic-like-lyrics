{
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build:dev",
          "build",
          "fmt"
        ]
      }
    }
  },
  "targetDefaults": {
    "fmt": {
      "dependsOn": [
        "^fmt"
      ],
      "outputs": [
        "{projectRoot}/src"
      ]
    },
    "build": {
      "outputs": [
        "{projectRoot}/dist",
        "{projectRoot}/pkg"
      ]
    },
    "build:dev": {
      "outputs": [
        "{projectRoot}/dist",
        "{projectRoot}/pkg"
      ]
    }
  }
}
