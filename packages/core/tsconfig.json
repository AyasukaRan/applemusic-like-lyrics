{
    "include": ["./src/**/*.ts"],
    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "types": ["vite-plugin-glsl/ext"],
        "strict": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": false,
        "skipLibCheck": true
    }
}