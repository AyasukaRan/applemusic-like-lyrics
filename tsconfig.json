{
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ],
    "exclude": [
        "./node_modules/@types/node/**/*.ts",
        "./build.mjs"
    ],
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["ESNext", "DOM", "WebWorker"],
        "module": "ESNext",
        "types": [],
        "jsx": "react-jsx",
        // "jsxFactory": "h",
        // "jsxFragmentFactory": "f",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "allowJs": false
    }
}