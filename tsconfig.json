{
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx",
        "./packages/*/src/**/*.ts",
        "./packages/*/src/**/*.tsx",
    ],
    "exclude": [
        "./node_modules/@types/node/**/*.ts",
        "./build.mjs"
    ],
    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "ESNext",
            "DOM",
            "WebWorker",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "types": [],
        "jsx": "react-jsx",
        "strict": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": false
    }
}